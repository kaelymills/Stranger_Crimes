	<div class="container">


		<h3><strong>Enter a Case</strong></h3>
		<h4>Name (Required)</h4>
		<input type="text" name="" id="name" class="form-control" required >

		<h4>Link to Photo Image (Required)</h4>
		<input type="text" name="" id="photo" class="form-control" required >

		<h4>Date (mm/dd/yy)</h4>
		<input type="text" name="" id="date" class="form-control" required >

		<h4>Short Case Description:</h4>
		<input type="text" name="" id="case" class="form-control" required >		

		<h4>Article:</h4>
		<input type="text" name="" id="article" class="form-control" height="200px" required >

		<h4>Longitude:</h4>
		<input type="text" name="" id="link" class="form-control" required >

		<h4>Latitude:</h4>
		<input type="text" name="" id="link" class="form-control" required >

		<h4>Local Law Enforcement Phone Number:</h4>
		<input type="text" name="" id="phone" class="form-control" required >

		<h4>Crimestoppers Link:</h4>
		<input type="text" name="" id="link" class="form-control" required >
		<hr>

		<br>
		<br>

		<!-- Submit Button -->
		<button type="submit" class="btn btn-primary btn-lg btn-block" id="add"><span class="glyphicon glyphicon-check"></span>
 		Submit</button>
	</div>
		<script type="text/javascript">
		$('#add').on('click', function () {
			var newcrime = {

				name: $('#name').val().trim(),
				photo: $('#photo').val().trim(),
				date: $('#date').val().trim(),
				case: $('#case').val().trim(),
				article: $('#article').val().trim(),
				phone: $('#phone').val().trim(),
				link: $('#link').val().trim(),
			 };
			 $('input:text').val('');
			$.post('http://localhost:3000/api/new', newcrime)
				.done(function (data) {
					console.log(data);
				});
			
		});
	</script>